<div class="login-page">
    {{#> Layout}}
        {{#> AuthForm className="login-page__form"}}
            <div>
                {{> Input placeholder="example@yandex.ru" fieldName="login" labelText="Логин" }}
                {{> Input fieldName="password" labelText="Пароль"}}
